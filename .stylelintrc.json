{
  "extends": [
    "stylelint-config-standard"
  ],
  "defaultSeverity": "warning",
  "rules": {
    "string-quotes": "single",
    "indentation": 2,
    "max-line-length": 120,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ]
  }
} 