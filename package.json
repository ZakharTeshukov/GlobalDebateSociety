{
  "name": "global-debate-society",
  "version": "1.0.0",
  "description": "Website for the Global Debate Society",
  "main": "index.js",
  "scripts": {
    "convert-images": "node src/js/convert-images.js",
    "update-templates": "node src/js/update-templates.js",
    "update-seo": "node src/js/update-seo.js",
    "build": "npm run convert-images && npm run update-templates && npm run update-seo",
    "start": "live-server",
    "lint:js": "eslint \"src/**/*.js\" --fix",
    "lint:css": "stylelint \"src/**/*.css\" --fix",
    "format": "prettier --write \"src/**/*.{js,css,html,json,md}\""
  },
  "keywords": [
    "debate",
    "global",
    "society"
  ],
  "author": "Global Debate Society",
  "license": "UNLICENSED",
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "sharp": "^0.33.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.0",
    "http-server": "^14.1.1",
    "live-server": "^1.2.2",
    "prettier": "^3.0.0",
    "stylelint": "^15.0.0",
    "stylelint-config-standard": "^34.0.0"
  }
}
